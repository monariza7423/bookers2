
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>


<h1>Editting Book</h1>

<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opininon</p>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>
