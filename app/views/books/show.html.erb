<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<%= link_to user_path(@books.user.id) do %>
  <%= image_tag @books.user.get_profile_image(100,100) %>
  <%= @books.user.name %>
<% end %>
<%= link_to @books.title, book_path(@books.id) %>
<%= @books.body %>