<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', book: @newbook, user: @user %>
    </div>
    <!--book detail-->
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book.id), class:'btn btn-success btn-block' %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class:'btn btn-danger btn-block' %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>