<h1>User info</h1>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th></th>
    </tr>
  </tbody>
</table>



<!--投稿部分-->
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<!--indexの右側-->

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>
  <% @books.each do |book| %>
    <tbody>
      <td>
        <%= image_tag book.user.get_profile_image(100,100) %>
      </td>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
    </tbody>
  <% end %>
</table>
