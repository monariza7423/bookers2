<!--投稿部分-->
<h1>New book</h1>
<%= form_with model: @book, url: '/books',method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>
  <%@books.each do |book| %>
    <tbody>
      <%= image_tag book.get_image %>
      <tr>
        <td><%= image_tag 'no-image.jpg' %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    </tbody>
</table>
