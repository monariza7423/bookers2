<%= render 'users/list', book: @book, user: @user %>

<!--indexの右側-->
<div class="col-md-3">
  <h2>Books</h2>
  <table  class="table table-hover table-inverse">
    <thead>
      <tr>
        <th colspan="3"></th>
        <th>title</th>
        <th>opinion</th>
      </tr>
    </thead>
    <% @books.each do |book| %>

      <tbody>
        <td>
          <%= link_to user_path(book.user.id) do %>
            <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td>
          <%= link_to book.title, book_path(book.id) %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tbody>
    <% end %>
  </table>
</div>