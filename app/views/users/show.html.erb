<%= render 'users/list', book: @book, user: @user %>

<!--右側-->
<h1>Book detail</h1>
<% @books.each do |book| %>
  <table>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@user) do %>
            <%= image_tag @user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td>
          <%= link_to book.title, book_path(book.id) %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
