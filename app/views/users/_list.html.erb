


      <h2>User info</h2>
      <%= image_tag user.profile_image %>
      <table class="table">
        <tbody>
          <tr>
            <th>name<%= user.name %></th>
            <th></th>
          </tr>
          <tr>
            <th>introduction<%= user.introduction %></th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <% if user == current_user %>
          <a class="btn btn-outline-secondary btn-block"></a>
          <%= link_to "編集", edit_user_path(user) %>
        <% end %>
      </div>



      <!--投稿部分-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <div class="form-group">
          <a class="btn btn-success btn-block"></a>
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>

